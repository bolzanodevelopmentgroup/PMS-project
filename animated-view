    <!-- Booking Modal -->
    <div id="bookingModal" class="modal">
      <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <h2>Booking Inquiry</h2>
        <form id="bookingForm" onsubmit="return false;">
          <input type="text" id="form-name" placeholder="Your Name" required />
          <input
            type="email"
            id="form-email"
            placeholder="Your Email"
            required
          />
          <input type="date" id="form-checkin" required />
          <input type="date" id="form-checkout" required />
          <textarea
            id="form-message"
            rows="4"
            placeholder="Your Message"
          ></textarea>

          <div style="margin-top: 20px">
            <button
              type="button"
              onclick="sendEmail()"
              style="margin-right: 10px"
            >
              Send via Email
            </button>
            <button type="button" onclick="sendToWhatsApp()">
              Send via WhatsApp
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      const cards = document.querySelectorAll(".card");
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.style.animation = "fadeInUp 1s ease forwards";
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.1 }
      );

      cards.forEach((card) => {
        card.style.opacity = 0;
        observer.observe(card);
      });

      function openModal() {
        document.getElementById("bookingModal").style.display = "block";
      }

      function closeModal() {
        document.getElementById("bookingModal").style.display = "none";
      }

      window.onclick = function (event) {
        const modal = document.getElementById("bookingModal");
        if (event.target == modal) {
          closeModal();
        }
      };

      function getFormValues() {
        return {
          name: document.getElementById("form-name").value.trim(),
          email: document.getElementById("form-email").value.trim(),
          checkin: document.getElementById("form-checkin").value,
          checkout: document.getElementById("form-checkout").value,
          message: document.getElementById("form-message").value.trim(),
        };
      }

      function sendEmail() {
        const data = getFormValues();
        const subject = encodeURIComponent("Booking Inquiry from Website");
        const body = encodeURIComponent(
          `Name: ${data.name}\nEmail: ${data.email}\nCheck-in: ${data.checkin}\nCheck-out: ${data.checkout}\n\nMessage:\n${data.message}`
        );
        window.location.href = `mailto:booking@filaoproperties.mu?subject=${subject}&body=${body}`;
      }

      function sendToWhatsApp() {
        const data = getFormValues();
        const phone = "23098765432"; // Replace with your WhatsApp number
        const message = encodeURIComponent(
          `Hello Filao Property Management,%0A%0AI am interested in booking.%0A%0AName: ${data.name}%0AEmail: ${data.email}%0ACheck-in: ${data.checkin}%0ACheck-out: ${data.checkout}%0AMessage: ${data.message}`
        );
        window.open(`https://wa.me/${phone}?text=${message}`, "_blank");
      }
    </script>
